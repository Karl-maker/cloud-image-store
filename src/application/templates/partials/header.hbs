<header style="
  background-color: #FFFFFF;
  padding: 24px 20px;
  color: #2C3E50;
  text-align: center;
  font-family: 'Helvetica Neue', Arial, sans-serif;
  border-bottom: 1px solid #F0F0F0;
">
  <div style="max-width: 600px; margin: 0 auto;">
    <!-- Company Logo/Name -->
    <h1 style="
      margin: 0;
      font-size: 22px;
      font-weight: 600;
      letter-spacing: 0.3px;
      line-height: 1.3;
    ">
      {{ companyName }}
    </h1>
    
    <!-- Optional Tagline -->
    <p style="
      margin: 8px 0 0 0;
      font-size: 14px;
      font-weight: 400;
      color: #666666;
      letter-spacing: 0.2px;
    ">
      Secure Account Services
    </p>
  </div>
</header>