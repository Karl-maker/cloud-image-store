  color: #444444;
  padding: 24px 20px;
  font-family: 'Helvetica Neue', Arial, sans-serif;
  font-size: 13px;
  line-height: 1.4;
  border-top: 1px solid #F5F5F5;
  text-align: center;
">
  <!-- Social Icons - Minimalist -->
  {{!-- <div style="
    margin-bottom: 20px;
  ">
    <a href="#" style="margin: 0 6px; display: inline-block;">
      <img src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png" alt="Instagram" width="18" style="opacity: 0.7;">
