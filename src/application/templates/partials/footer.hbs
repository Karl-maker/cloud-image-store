  <!-- Legal Links - Minimal -->
  <div style="
    margin-bottom: 18px;
    letter-spacing: 0.02em;
  ">
    <a href="{{ privacyPolicy }}" style="
      color: #666666;
      text-decoration: none;
      margin: 0 8px;
      display: inline-block;
    ">Privacy</a>
    <span style="color: #E0E0E0;">•</span>
    <a href="{{ termsOfServices }}" style="
      color: #666666;
      text-decoration: none;
      margin: 0 8px;
      display: inline-block;
    ">Terms</a>
    <span style="color: #E0E0E0;">•</span>
    <a href="{{ cookiePolicy }}" style="
      color: #666666;
      text-decoration: none;
      margin: 0 8px;
      display: inline-block;
    ">Cookies</a>
  </div>

  <!-- Copyright -->
  <div style="
    color: #999999;
    font-size: 12px;
  ">
    <p style="margin: 0;">
      © {{ year }} <a href="{{ companyWebsite }}" style="
        color: #555555;
        text-decoration: none;
        font-weight: 500;
      ">{{ companyName }}</a>
    </p>
    <p style="margin: 8px 0 0 0;">
      Connecting us together
    </p>
  </div>

  <!-- Mobile Responsiveness -->
  <style type="text/css">
    @media screen and (max-width: 480px) {
      .footer-link {
        display: block;
        margin: 6px 0 !important;
      }
      .footer-separator {
        display: none;
      }
    }
  </style>
</footer>