<div style="max-width: 600px; margin: 0 auto; margin-top: 10px; padding: 0 24px; font-family: 'Helvetica Neue', Arial, sans-serif; color: #333333;">
  <!-- Header -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 24px;">
    <tr>
      <td>
        <p style="font-size: 16px; line-height: 1.5; margin: 0;">Dear {{name}},</p>
      </td>
    </tr>
  </table>

  <!-- Main Content -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 24px;">
    <tr>
      <td>
        <p style="font-size: 18px; font-weight: 600; color: #2C3E50; margin: 0 0 16px 0;">Get Ready to Share Moments!</p>
        <p style="font-size: 16px; line-height: 1.5; margin: 0 0 24px 0;">
          Your account is now linked to the <strong>{{subscriptionPlan}}</strong> subscription.
        </p>
      </td>
    </tr>
  </table>

  <!-- Subscription Benefits -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 24px; background-color: #F8FAFC; border-radius: 8px; padding: 20px;">
    <tr>
      <td>
        <p style="font-size: 16px; font-weight: 600; color: #2C3E50; margin: 0 0 16px 0;">âœ¨ Subscription Benefits</p>
        
        {{#each features}}
        <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 12px;">
          <tr>
            <td width="24" valign="top" style="padding-right: 12px;">âœ“</td>
            <td>
              <p style="font-size: 15px; line-height: 1.5; margin: 0; color: #4A5568;">{{this}}</p>
            </td>
          </tr>
        </table>
        {{/each}}
      </td>
    </tr>
  </table>

  <!-- Collaboration Section -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 24px; background-color: #F0F7FF; border-radius: 8px; padding: 20px;">
    <tr>
      <td>
        <p style="font-size: 16px; font-weight: 600; color: #2C3E50; margin: 0 0 16px 0;">ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘¦ Start Collaborating</p>
        <p style="font-size: 15px; line-height: 1.5; margin: 0 0 16px 0; color: #4A5568;">
          Invite family members to view, contribute, and comment on your albums. Create shared memories together.
        </p>
      </td>
    </tr>
  </table>

  <!-- CTA Button -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 32px;">
    <tr>
      <td align="center">
        <a href="{{albumLink}}" 
           style="background-color: #2C3E50; color: #FFFFFF; padding: 14px 28px; text-decoration: none; font-weight: 600; font-size: 16px; border-radius: 6px; display: inline-block;">
          Start Creating Albums
        </a>
      </td>
    </tr>
  </table>

  <!-- Support -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin-bottom: 24px; border-top: 1px solid #E2E8F0; padding-top: 24px;">
    <tr>
      <td>
        <p style="font-size: 15px; line-height: 1.5; margin: 0 0 8px 0; color: #4A5568;">
          Need assistance with your album or subscription?
        </p>
        <a href="{{companySupportLink}}" 
           style="color: #2C3E50; text-decoration: underline; font-weight: 500; font-size: 15px;">
          Contact our support team
        </a>
      </td>
    </tr>
  </table>

  <!-- Footer -->
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td>
        <p style="font-size: 16px; line-height: 1.5; margin: 0 0 8px 0;">Best regards,</p>
        <p style="font-size: 16px; color: #2C3E50; font-weight: 600; line-height: 1.5; margin: 0;">The {{companyName}} Team</p>
      </td>
    </tr>
  </table>
</div>